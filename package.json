{
  "name": "claude-code-history-viewer",
  "private": true,
  "version": "1.1.3",
  "description": "Desktop application for browsing and analyzing Claude Code conversation history",
  "author": "JaeHyeok Lee, ndokutovich, and others (see commits history)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ndokutovich/claude-code-history-viewer.git"
  },
  "bugs": {
    "url": "https://github.com/ndokutovich/claude-code-history-viewer/issues"
  },
  "homepage": "https://github.com/ndokutovich/claude-code-history-viewer#readme",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "lint": "eslint .",
    "preview": "vite preview",
    "build": "node scripts/run-with-pm.cjs sync-version && tsc -b && vite build",
    "tauri:build": "node scripts/run-with-pm.cjs sync-version && tauri build",
    "tauri:build:mac": "node scripts/run-with-pm.cjs sync-version && tauri build --target universal-apple-darwin",
    "tauri:build:windows": "node scripts/run-with-pm.cjs sync-version && tauri build --target x86_64-pc-windows-msvc",
    "tauri:build:linux": "node scripts/run-with-pm.cjs sync-version && tauri build --target x86_64-unknown-linux-gnu",
    "sync-version": "node scripts/sync-version.cjs",
    "release": "node scripts/release.cjs",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "test": "vitest",
    "test:run": "vitest run --reporter=verbose",
    "test:ui": "vitest --ui",
    "test:simple": "vitest run simple",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "test:all": "vitest run && playwright test"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.0",
    "@heroicons/react": "^2.0.0",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/react-virtual": "^3.0.0",
    "@tauri-apps/api": "^2.6.0",
    "@tauri-apps/plugin-dialog": "^2.0.0",
    "@tauri-apps/plugin-http": "^2.5.0",
    "@tauri-apps/plugin-os": "^2.3.0",
    "@tauri-apps/plugin-process": "^2.3.0",
    "@tauri-apps/plugin-store": "^2.0.0",
    "@tauri-apps/plugin-updater": "^2.9.0",
    "@types/diff": "^8.0.0",
    "@types/prismjs": "^1.26.5",
    "@types/react-syntax-highlighter": "^15.5.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "diff": "^8.0.2",
    "i18next": "^25.3.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "lucide-react": "^0.300.0",
    "prism-react-renderer": "^2.4.1",
    "prismjs": "^1.30.0",
    "react": "^19.1.0",
    "react-diff-viewer-continued": "^3.4.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.5.3",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.6.1",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^2.0.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@playwright/test": "^1.49.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@tauri-apps/cli": "^2.6.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/node": "^24.0.10",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "jsdom": "^24.0.0",
    "postcss": "^8.5.3",
    "rollup-plugin-visualizer": "^6.0.3",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.5",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^7.0.3",
    "vitest": "^1.3.1"
  },
  "pnpm": {
    "overrides": {
      "vite": "^7.0.3"
    },
    "ignoredBuiltDependencies": [
      "@tailwindcss/oxide",
      "esbuild"
    ]
  }
}
