{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Claude Code History Viewer",
  "version": "1.1.0",
  "identifier": "com.claude.history-viewer",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "node scripts/run-with-pm.cjs dev",
    "beforeBuildCommand": "node scripts/run-with-pm.cjs build"
  },
  "app": {
    "windows": [
      {
        "title": "Claude Code History Viewer",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "visible": true,
        "focus": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default",
        "http-requests"
      ]
    },
    "withGlobalTauri": true
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/ndokutovich/claude-code-history-viewer/releases/latest/download/latest.json"
      ],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDI0QTRBQTVEOTgxMUJGNEEKUldSS3Z4R1lYYXFrSkRPUFl6T0ZLSndRdkUzbDdBcXhKVHUxZWZBbEhkRnd4SU0ra3g1NDY4KzgK"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": null,
      "hardenedRuntime": true,
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "wix": {
        "language": [
          "en-US",
          "ko-KR",
          "ru-RU"
        ]
      },
      "nsis": {
        "languages": [
          "English",
          "Korean",
          "Russian"
        ],
        "displayLanguageSelector": true
      }
    }
  }
}
